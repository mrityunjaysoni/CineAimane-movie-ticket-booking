@model Movie
@{
	ViewData["Title"] = "Edit a Title";
	if (TempData["CurrentPage"] != null)
	{
		TempData["CurrentPage"] = TempData["CurrentPage"];
	}
}
<partial name="_AdminNavbarPartial" />
<div class="padding-top min-vh-100">
	<div class="container my-4">
		<div class="section-title d-flex align-items-center gap-4 mb-3" data-aos="fade-up">
			<h2 class="text-uppercase fw-bold flex-shrink-0 mb-0">@ViewData["Title"]</h2>
			<div class="line"></div>
		</div>
		<form method="post" class="movie-form" autocomplete="off">
			<input type="hidden" asp-for="Id" />
			<div class="row g-3">
				<div class="col-lg-4 col-md-6">
					<label asp-for="Title" class="form-label fw-semibold">Movie Title <span class="text-danger">*</span></label>
					<input type="text" asp-for="Title" class="form-control form-control-lg" placeholder="Enter movie title here" required>
					<span asp-validation-for="Title" class="text-danger d-block mt-2"></span>
				</div>
				<div class="col-lg-4 col-md-6">
					<label asp-for="ReleaseDate" class="form-label fw-semibold">Release Date <span class="text-danger">*</span></label>
					<input type="date" asp-for="ReleaseDate" class="form-control form-control-lg" required>
					<span asp-validation-for="ReleaseDate" class="text-danger d-block mt-2"></span>
				</div>
				<div class="col-lg-4 col-md-6">
					<label asp-for="Genres" class="form-label fw-semibold">Genres <span class="text-danger">*</span></label>
					<input type="text" asp-for="Genres" class="form-control form-control-lg" placeholder="Enter genres here" required>
					<span asp-validation-for="Genres" class="text-danger d-block mt-2"></span>
				</div>
				<div class="col-lg-4 col-md-6">
					<label asp-for="Duration" class="form-label fw-semibold">Duration <span class="text-danger">*</span></label>
					<input type="text" asp-for="Duration" class="form-control form-control-lg" placeholder="Enter duration here" required>
					<span asp-validation-for="Duration" class="text-danger d-block mt-2"></span>
				</div>
				<div class="col-lg-4 col-md-6">
					<label asp-for="Rating" class="form-label fw-semibold">Rating <span class="text-danger">*</span></label>
					<select asp-for="Rating" asp-items="Html.GetEnumSelectList<Rating>()" class="form-select form-select-lg" required></select>
					<span asp-validation-for="Rating" class="text-danger d-block mt-2"></span>
				</div>
				<div class="col-lg-4 col-md-6">
					<label asp-for="Trailer" class="form-label fw-semibold">Trailer URL <span class="text-danger">*</span></label>
					<input type="url" asp-for="Trailer" class="form-control form-control-lg" placeholder="Enter trailer URL here" required>
					<span asp-validation-for="Trailer" class="text-danger d-block mt-2"></span>
				</div>
				<div class="col-lg-4 col-md-6">
					<label asp-for="Director" class="form-label fw-semibold">Director <span class="text-danger">*</span></label>
					<input type="text" asp-for="Director" class="form-control form-control-lg" placeholder="Enter director name here" required>
					<span asp-validation-for="Director" class="text-danger d-block mt-2"></span>
				</div>
				<div class="col-lg-4 col-md-6">
					<label asp-for="Cast" class="form-label fw-semibold">Cast <span class="text-danger">*</span></label>
					<input type="text" asp-for="Cast" class="form-control form-control-lg" placeholder="Enter top cast here" required>
					<span asp-validation-for="Cast" class="text-danger d-block mt-2"></span>
				</div>
				<div class="col-lg-4 col-md-6">
					<label asp-for="Poster" class="form-label fw-semibold">Poster URL <span class="text-danger">*</span></label>
					<input type="url" asp-for="Poster" class="form-control form-control-lg" placeholder="Enter poster URL here" required>
					<span asp-validation-for="Poster" class="text-danger d-block mt-2"></span>
				</div>
				<div class="col-lg-4 col-md-6">
					<label asp-for="Backdrop" class="form-label fw-semibold">Backdrop URL <span class="text-danger">*</span></label>
					<input type="url" asp-for="Backdrop" class="form-control form-control-lg" placeholder="Enter backdrop image URL here" required>
					<span asp-validation-for="Backdrop" class="text-danger d-block mt-2"></span>
				</div>
				<div class="col-lg-4 col-md-6">
					<label asp-for="StartDate" class="form-label fw-semibold">Start Date <span class="text-danger">*</span></label>
					<input type="date" asp-for="StartDate" class="form-control form-control-lg" placeholder="Enter start date here" required>
					<span asp-validation-for="StartDate" class="text-danger d-block mt-2"></span>
				</div>
				<div class="col-lg-4 col-md-6">
					<label asp-for="EndDate" class="form-label fw-semibold">End Date <span class="text-danger">*</span></label>
					<input type="date" asp-for="EndDate" class="form-control form-control-lg" placeholder="Enter end date here" required>
					<span asp-validation-for="EndDate" class="text-danger d-block mt-2"></span>
				</div>
				<div class="col-lg-12">
					<label asp-for="Overview" class="form-label fw-semibold">Overview <span class="text-danger">*</span></label>
					<textarea asp-for="Overview" cols="30" rows="10" class="form-control form-control-lg" placeholder="Enter overview of the movie here" required></textarea>
					<span asp-validation-for="Overview" class="text-danger d-block"></span>
				</div>
				<div class="col-lg-6">
					<div class="d-grid">
						<button type="submit" class="btn btn-lg btn-block btn-primary text-uppercase fw-semibold">Update</button>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="d-grid">
						<a class="btn btn-lg btn-block btn-dark text-uppercase fw-semibold" asp-controller="Admin" asp-action="Delete" asp-route-id="@Model.Id" onclick="return confirm('Are you sure you want to delete this title?');">Delete</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
@section Styles {
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
}
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<partial name="_ToastScriptsPartial" />
}